<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView android:id="@+id/playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_button_wrong"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        app:cornerRadius="54dp"
        android:visibility="gone"
        android:backgroundTint="@color/search_not_found"
        app:icon="@drawable/new_playlist_text" />

    <ImageView
        android:id="@+id/search_image_not_found"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="106dp"
        android:src="@drawable/not_found"
        android:visibility="gone" />

    <TextView android:id="@+id/empty_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="242dp"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/search_not_found"
        android:fontFamily="@font/ys_display_medium"
        tools:text="@string/empty_playlist"
        android:visibility="gone" />

</FrameLayout>