<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".media.ui.details.MediaDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgrey">

        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_large"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/details_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_left_2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <TextView
            android:id="@+id/details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ys_display_bold"
            android:fontWeight="700"
            android:textSize="24sp"
            android:textColor="@color/blbl"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/details_image"
            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ys_display_regular"
            android:fontWeight="400"
            android:textSize="18sp"
            android:textColor="@color/blbl"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/details_name"
            tools:text="2022" />

        <TextView
            android:id="@+id/details_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ys_display_regular"
            android:fontWeight="400"
            android:textSize="18sp"
            android:textColor="@color/blbl"
            android:drawableEnd="@drawable/ic_dot"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/details_description"
            tools:text="300 минут" />

        <TextView
            android:id="@+id/details_count_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:fontWeight="400"
            android:textSize="18sp"
            android:textColor="@color/blbl"
            app:layout_constraintBottom_toBottomOf="@id/details_duration"
            app:layout_constraintStart_toEndOf="@id/details_duration"
            app:layout_constraintTop_toTopOf="@id/details_duration"
            tools:text="98 треков" />

        <ImageButton
            android:id="@+id/button_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/transparent"
            android:src="@drawable/ic_share"
            android:tint="@color/blbl"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/details_duration"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/transparent"
            android:src="@drawable/ic_more"
            android:tint="@color/blbl"
            app:layout_constraintBottom_toBottomOf="@id/button_share"
            app:layout_constraintStart_toEndOf="@id/button_share"
            app:layout_constraintTop_toTopOf="@id/button_share"
            tools:ignore="UseAppTint" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/detailsBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="240dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:visibility="visible">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bottom_view_rectangle" />

        <TextView
            android:id="@+id/detailsEmptyList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/ys_display_regular"
            android:fontWeight="400"
            android:textSize="20sp"
            android:textColor="@color/blbl"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="@string/empty_tracks"
            tools:visibility="gone"
             />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detailsTrackList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/track_view" />

    </LinearLayout>

    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/detailsBottomSheetMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="383dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:visibility="gone">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bottom_view_rectangle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal"
            android:background="@color/search_elem_back" >

            <ImageView
                android:id="@+id/search_track_image"
                android:layout_height="45dp"
                android:layout_width="45dp"
                android:layout_marginTop="@dimen/track_view_margin"
                android:layout_marginStart="@dimen/track_view_height"
                android:scaleType="fitCenter"
                tools:src="@drawable/placeholder" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/track_view_margin"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/playlist_name"
                        android:layout_height="19dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="@dimen/track_view_margin_large"
                        android:textColor="@color/search_not_found"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:fontFamily="@font/ys_display_regular"
                        android:fontWeight="400"
                        tools:text="Best songs 2021"
                        />

                    <TextView
                        android:id="@+id/track_count"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:fontFamily="@font/ys_display_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/search_font_author"
                        android:textSize="11sp"
                        android:fontWeight="400"
                        tools:text="98 треков" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/playlist_share"
            android:layout_height="61dp"
            android:layout_width="match_parent"
            android:paddingStart="21dp"
            android:textColor="@color/search_not_found"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:fontFamily="@font/ys_display_regular"
            android:fontWeight="400"
            android:text="@string/playlist_share" />

        <TextView
            android:id="@+id/playlist_edit"
            android:layout_height="61dp"
            android:layout_width="match_parent"
            android:paddingStart="21dp"
            android:textColor="@color/search_not_found"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:fontFamily="@font/ys_display_regular"
            android:fontWeight="400"
            android:text="@string/playlist_edit" />

        <TextView
            android:id="@+id/playlist_delete"
            android:layout_height="61dp"
            android:layout_width="match_parent"
            android:paddingStart="21dp"
            android:textColor="@color/search_not_found"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:fontFamily="@font/ys_display_regular"
            android:fontWeight="400"
            android:text="@string/playlist_delete" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>