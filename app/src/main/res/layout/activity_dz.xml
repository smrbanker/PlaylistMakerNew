<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="4dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="62dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="26sp"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="28dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_marginStart="@dimen/med_but"
            android:layout_marginEnd="@dimen/med_but"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cornerRadius="@dimen/med_but"
            app:icon="@drawable/icon_search_"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/zero"
            app:iconTint="@color/black"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_marginStart="@dimen/med_but"
            android:layout_marginEnd="@dimen/med_but"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cornerRadius="@dimen/med_but"
            app:icon="@drawable/icon_media_"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/zero"
            app:iconTint="@color/black"
        />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_marginStart="@dimen/med_but"
            android:layout_marginEnd="@dimen/med_but"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cornerRadius="@dimen/med_but"
            app:icon="@drawable/icon_settings_"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/zero"
            app:iconTint="@color/black"
            />
    </LinearLayout>
</LinearLayout>